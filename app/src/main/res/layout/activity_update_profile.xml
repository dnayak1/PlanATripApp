<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_update_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#C0C0C0"
    tools:context="dhiraj.com.chatapplication.UpdateProfileActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageViewUpdateProfilePic" />

    <TextView
        android:text="Click to update photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewUpdateProfilePicText"
        android:layout_below="@+id/imageViewUpdateProfilePic"
        android:layout_centerHorizontal="true"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextUpdateFirstName"
        android:layout_centerVertical="true"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textViewUpdateProfilePicText"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextUpdateLastName"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/editTextUpdateFirstName" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextUpdateLastName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/spinnerUpdateProfileSex" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonUpdateProfileCancel"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/spinnerUpdateProfileSex"
        android:layout_marginLeft="50dp"/>


    <Button
        android:text="Update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonUpdateProfileUpdate"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/spinnerUpdateProfileSex"
        android:layout_marginLeft="200dp"
         />


</RelativeLayout>
