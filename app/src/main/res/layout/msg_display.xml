<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="15dp">

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayoutMessages">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageViewSenderPic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:id="@+id/textViewShowMessage" />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/textViewShowMessage"
            android:layout_marginLeft="65dp"
            android:id="@+id/imageViewShowSendPic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_below="@+id/imageViewShowSendPic"
            android:id="@+id/textViewSentTime" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/delete"
            android:layout_alignParentRight="true"
            android:layout_below="@id/imageViewShowSendPic"
            android:background="@null"
            android:id="@+id/imageButtonDelete" />

    </RelativeLayout>

</RelativeLayout>