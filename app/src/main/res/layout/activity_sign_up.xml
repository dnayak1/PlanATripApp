<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#C0C0C0"
    tools:context="dhiraj.com.chatapplication.SignUpActivity">

    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="17dp"
        android:src="@drawable/add_image"
        android:id="@+id/imageViewSignUpProfilePhoto"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/boarder"
        android:scaleType="fitXY" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/editTextSignUpEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:id="@+id/editTextSignUpPassword"
        android:hint="Password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextSignUpFirstNName"
        android:hint="First Name"
        android:layout_alignTop="@+id/imageViewSignUpProfilePhoto"
        android:layout_toRightOf="@+id/imageViewSignUpProfilePhoto"
        android:layout_toEndOf="@+id/imageViewSignUpProfilePhoto"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp" />

    <Button
        android:text="@string/button_sign_up_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSignUpSignUp"
        android:layout_marginTop="46dp"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_below="@+id/editTextSignUpPassword"
        android:layout_alignLeft="@+id/spinnerSignUpSex"
        android:layout_alignStart="@+id/spinnerSignUpSex" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextSignUpLastName"
        android:hint="Last name"
        android:layout_below="@+id/editTextSignUpFirstNName"
        android:layout_alignLeft="@+id/editTextSignUpFirstNName"
        android:layout_alignStart="@+id/editTextSignUpFirstNName"
        android:layout_marginTop="22dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerSignUpSex"
        android:layout_above="@+id/editTextSignUpEmail"
        android:layout_alignLeft="@+id/editTextSignUpLastName"
        android:layout_alignStart="@+id/editTextSignUpLastName" />

    <Button
        android:text="@string/button_sign_up_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:id="@+id/buttonSignUpCancel"
        android:layout_alignBaseline="@+id/buttonSignUpSignUp"
        android:layout_alignBottom="@+id/buttonSignUpSignUp"
        android:layout_alignRight="@+id/imageViewSignUpProfilePhoto"
        android:layout_alignEnd="@+id/imageViewSignUpProfilePhoto" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_marginTop="71dp"
        android:id="@+id/editTextSignUpEmail"
        android:hint="Email"
        android:layout_below="@+id/imageViewSignUpProfilePhoto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/text_view_add_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewAddPhoto"
        android:layout_below="@+id/imageViewSignUpProfilePhoto"
        android:layout_alignRight="@+id/buttonSignUpCancel"
        android:layout_alignEnd="@+id/buttonSignUpCancel"
        android:layout_marginRight="35dp"
        android:layout_marginEnd="35dp" />

</RelativeLayout>
